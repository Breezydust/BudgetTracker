<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.humber.starvingstudents.studentbudgetandexpensetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BudgetingActivity"
            android:allowBackup="true"
            android:icon="@mipmap/money"
            android:label="@string/activity_name2"
            android:roundIcon="@mipmap/money_values"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ExpensesActivity"
            android:label="@string/title_activity_expenses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BudgetInputActivity"
            android:label="@string/title_activity_budget_input"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>